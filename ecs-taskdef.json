{
  "family": "brightdata-proxy-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::<ACCOUNT_ID>:role/brightdataTaskRole",
  "containerDefinitions": [
    {
      "name": "brightdata-proxy",
      "image": "<IMAGE_URI>",
      "essential": true,
      "linuxParameters": { "initProcessEnabled": true },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "<AWS_REGION>",
          "awslogs-group": "/ecs/brightdata-proxy",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "secrets": [
        {
          "name": "BRIGHTDATA_PROXY",
          "valueFrom": "arn:aws:ssm:<AWS_REGION>:<ACCOUNT_ID>:parameter/brightdata/proxy"
        }
      ],
      "environment": [
        { "name": "PYTHONUNBUFFERED", "value": "1" }
      ],
      "portMappings": []
    }
  ]
}
