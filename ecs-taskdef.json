{
  "family": "brightdata-proxy-task",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "cpu": "512",
  "memory": "1024",
  "executionRoleArn": "arn:aws:iam::563561751769:role/ecsTaskExecutionRole",
  "taskRoleArn": "arn:aws:iam::563561751769:role/brightdataTaskRole",
  "containerDefinitions": [
    {
      "name": "brightdata-proxy",
      "image": "<IMAGE_URI>",
      "essential": true,
      "linuxParameters": { "initProcessEnabled": true },
      "logConfiguration": {
        "logDriver": "awslogs",
        "options": {
          "awslogs-region": "us-east-2",
          "awslogs-group": "/ecs/brightdata-proxy",
          "awslogs-stream-prefix": "ecs"
        }
      },
      "secrets": [
        {
          "name": "BRIGHTDATA_PROXY",
          "valueFrom": "arn:aws:ssm:us-east-2:563561751769:parameter/brightdata/proxy"
        },
        {
          "name": "BRIGHTDATA_CA_B64",
          "valueFrom": "arn:aws:ssm:us-east-2:563561751769:parameter/brightdata/ca_b64"
        }
      ],
      "environment": [
        { "name": "PYTHONUNBUFFERED", "value": "1" }
      ]
    }
  ]
}

